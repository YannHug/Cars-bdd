{% extends 'base.html.twig' %}

{% block title %}Les voitures
{% endblock %}
{% block body %}
	<div class="container">
		<h1 class="mt-3">{{brand.name}}</h1>
		<div class="row col-12 px-2 d-flex">
        <h4>Les modeles : </h4>
			{% for car in brand.car %}
				<div class="card border-dark m-1 d-flex col-5">
					<div class="card-body">
						<p class="card-text">
							Le modele :
							{{car.model}}
							a été lancé en
							{{car.createdAt|date('Y')}}
						</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<a href="{{ path('brand_browse') }}">Retour à la liste</a>
{% endblock %}
