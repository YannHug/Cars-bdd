{% extends 'base.html.twig' %}

{% block title %}Les marques
{% endblock %}
{% block body %}
	<div class="container">
		<h1 class="mt-3">Les Marques</h1>
		<div>
			<a href="{{ path('brand_add') }}" class="btn btn-success">Ajouter une marque</a>
		</div>
		<div class="row col-12 px-2 d-flex">
			{% for brand in brands %}
				<div class="card border-dark m-1 d-flex col-5">
					<div class="card-body">
						<h4 class="card-title">
							<a href="{{ path('brand_read', {'id': brand.id}) }}">{{brand.name}}</a>
						</h4>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
